<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="match"
                type="com.example.pingpongscore.database.Match"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/textColor">

        <TextView
                android:id="@+id/player1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Johnny Sins"
                app:player1Name="@{match}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

        <TextView
                android:id="@+id/player2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Johnny Dins"
                app:player2Name="@{match}"/>

        <TextView
                android:id="@+id/player1_sets_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5"
                app:player1SetsWon="@{match}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>

        <TextView
                android:id="@+id/player2_sets_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3"
                app:player2SetsWon="@{match}"/>

        <TextView
                android:id="@+id/date_time_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dateAndTimeFinished="@{match}"/>

    </LinearLayout>
</layout>